@{
    var actualAction = ViewContext.RouteData.Values["action"].ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Subtitle</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#">CRUD GYM</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <div class="navbar-nav">
                        <a class="nav-link @(actualAction == "Index" ? "active" : "")" asp-action="Index">Home</a>
                        <a class="nav-link @(actualAction == "Employees" ? "active" : "")" asp-action="Employees">Employees</a>
                        <a class="nav-link @(actualAction == "Customers" ? "active" : "")" asp-action="Customers">Customers</a>
                        <a class="nav-link @(actualAction == "Equipments" ? "active" : "")" asp-action="Equipments">Equipments</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="text-light bg-dark p-2 fixed-bottom text-center">
        By Pedro Henrique Farias Boscachi<br />
        @RenderSection("Footer", false)
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
